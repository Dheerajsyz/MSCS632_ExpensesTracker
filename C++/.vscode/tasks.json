{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build active file (C++17)",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "isBackground": false
        }
    ],
    "version": "2.0.0"
}